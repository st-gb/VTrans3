  <translation_rule 
    syntax_tree_path="1stPersSingSimpleFutureClause0Obj.MainVerbSimpleFuture0Obj.will"
    attribute_name="GerMainVerb0Obj1stPersSingPres" 
  />
  <translation_rule 
    syntax_tree_path="1stPersSingSimpleFutureClause0Obj.MainVerbSimpleFuture0Obj.mainVerbInf0Obj"
    attribute_name="GerMainVerb0ObjInfinitive" 
  />
  <!-- Verb that allows 1 object. -->
  <translation_rule 
    syntax_tree_path="1stPersSingSimpleFutureClause1Obj.MainVerbSimpleFuture0Obj.will"
    attribute_name="GerMainVerb1Obj1stPersSingPres" 
  />
  <translation_rule 
