<translation_rules>

  <!--INdefine article singular-->
  
  <!--concatenate both translations (if selecting "der" in a choice control 
    the translation for the finite verb of have should be also selected)-->
  <concatenated_translation_rules>
	  <translation_rule 
		syntax_tree_path="indefinite_article_singular.indefinite_article"
		translation="ein">
		<condition syntax_tree_path="indefinite_article_singular.singular_noun"
		  attribute_name="German_noun_article"
		  byte_attribute_value="0"
		/>
	  </translation_rule>
	  <translation_rule 
		syntax_tree_path="indefinite_article_singular.singular_noun"
		attribute_name="German_singular"
	  />
  </concatenated_translation_rules>
  <!--concatenate both translations (if selecting "der" in a choice control 
    the translation for the finite verb of have should be also selected)-->
  <concatenated_translation_rules>
	  <translation_rule 
		syntax_tree_path="indefinite_article_singular.indefinite_article"
		translation="eine">
		<condition syntax_tree_path="indefinite_article_singular.singular_noun"
		  attribute_name="German_noun_article"
		  byte_attribute_value="1"
		/>
	  </translation_rule>
	  <translation_rule 
		syntax_tree_path="indefinite_article_singular.singular_noun"
		attribute_name="German_singular"
	  />
  </concatenated_translation_rules>
  <!--concatenate both translations (if selecting "der" in a choice control 
    the translation for the finite verb of have should be also selected)-->
  <concatenated_translation_rules>
	  <translation_rule 
		syntax_tree_path="indefinite_article_singular.indefinite_article"
		translation="ein">
		<condition syntax_tree_path="indefinite_article_singular.singular_noun"
		  attribute_name="German_noun_article"
		  byte_attribute_value="2"
		/>
	  </translation_rule>
	  <translation_rule 
		syntax_tree_path="indefinite_article_singular.singular_noun"
		attribute_name="German_singular"
	  />
  </concatenated_translation_rules>
  
  <!--concatenate both translations (if selecting "der" in a choice control 
    the translation for the finite verb of have should be also selected)-->
  <concatenated_translation_rules>
	  <translation_rule 
		syntax_tree_path="indefiniteArticle_Positive_SingNoun.indefiniteArticle_Positive.indefinite_article"
		translation="ein">
		<condition syntax_tree_path="indefiniteArticle_Positive_SingNoun.singular_noun"
		  attribute_name="German_noun_article"
		  byte_attribute_value="0"
		/>
	  </translation_rule>
	 <translation_rule 
		syntax_tree_path="indefiniteArticle_Positive_SingNoun.indefiniteArticle_Positive.positive"
		string_transformation_function_name="makeMale" 
		attribute_name="German_positive"
		>
		<!-- e.g. "ein kleinER Mann". -->
		<condition syntax_tree_path="indefiniteArticle_Positive_SingNoun.singular_noun"
		  attribute_name="German_noun_article"
		  byte_attribute_value="0"
		/>
	 </translation_rule>
	  <translation_rule 
		syntax_tree_path="indefiniteArticle_Positive_SingNoun.singular_noun"
		attribute_name="German_singular"
	  />
  </concatenated_translation_rules>
  <concatenated_translation_rules>
	  <translation_rule 
		syntax_tree_path="indefiniteArticle_Positive_SingNoun.indefiniteArticle_Positive.indefinite_article"
		translation="eine">
		<condition syntax_tree_path="indefiniteArticle_Positive_SingNoun.singular_noun"
		  attribute_name="German_noun_article"
		  byte_attribute_value="1"
		/>
	  </translation_rule>
	  <translation_rule 
		syntax_tree_path="indefiniteArticle_Positive_SingNoun.indefiniteArticle_Positive.positive"
		string_transformation_function_name="makeFemale" 
		attribute_name="German_positive"
		>
		<!-- e.g. "eine kleinE Frau". -->
		<condition syntax_tree_path="indefiniteArticle_Positive_SingNoun.singular_noun"
		  attribute_name="German_noun_article"
		  byte_attribute_value="1"
		/>
	  </translation_rule>
	  <translation_rule 
		syntax_tree_path="indefiniteArticle_Positive_SingNoun.singular_noun"
		attribute_name="German_singular"
	  />
  </concatenated_translation_rules>
  <concatenated_translation_rules>
	  <translation_rule 
		syntax_tree_path="indefiniteArticle_Positive_SingNoun.indefiniteArticle_Positive.indefinite_article"
		translation="ein">
		<condition syntax_tree_path="indefiniteArticle_Positive_SingNoun.singular_noun"
		  attribute_name="German_noun_article"
		  byte_attribute_value="2"
		/>
	  </translation_rule>
	  <translation_rule 
		syntax_tree_path="indefiniteArticle_Positive_SingNoun.indefiniteArticle_Positive.positive"
		string_transformation_function_name="makeNeutral" 
		attribute_name="German_positive"
		>
		<!-- e.g. "ein kleinES Tier". -->
		<condition syntax_tree_path="indefiniteArticle_Positive_SingNoun.singular_noun"
		  attribute_name="German_noun_article"
		  byte_attribute_value="2"
		/>
	  </translation_rule>
	  <translation_rule 
		syntax_tree_path="indefiniteArticle_Positive_SingNoun.singular_noun"
		attribute_name="German_singular"
	  />
  </concatenated_translation_rules>  
</translation_rules>